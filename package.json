{
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "gen-dts": "vue-tsc -p tsconfig.app.json --noEmit false --declaration --emitDeclarationOnly --declarationDir dist/types",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:preview": "pnpm run -C docs preview",
    "type-check": "vue-tsc --build --force",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "cm": "git-cz"
  },
  "dependencies": {
    "@material-template/components": "workspace:*",
    "@material-template/constants": "workspace:*",
    "@material-template/directives": "workspace:*",
    "@material-template/hooks": "workspace:*",
    "@material-template/style": "workspace:*",
    "@material-template/utils": "workspace:*",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@pnpm/workspace.find-packages": "^4.0.14",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vitejs/plugin-vue-jsx": "^4.1.0",
    "@vitest/eslint-plugin": "1.1.7",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "eslint": "^9.15.0",
    "eslint-plugin-oxlint": "^0.11.1",
    "eslint-plugin-vue": "^9.31.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^7.0.1",
    "oxlint": "^0.11.1",
    "prettier": "^3.4.0",
    "typescript": "~5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-vue-devtools": "^7.6.4",
    "vitest": "^2.1.6",
    "vue-tsc": "^2.1.10"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
