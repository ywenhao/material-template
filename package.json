{
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "type": "module",
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "gen-dts": "vue-tsc -p tsconfig.app.json --noEmit false --declaration --emitDeclarationOnly --declarationDir dist/types",
    "stub": "pnpm run -r --parallel stub",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:preview": "pnpm run -C docs preview",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "prepare": "husky",
    "postinstall": "pnpm stub",
    "lint-staged": "lint-staged",
    "cm": "git-cz"
  },
  "dependencies": {
    "@material-template/build-constants": "workspace:*",
    "@material-template/build-utils": "workspace:*",
    "@material-template/components": "workspace:*",
    "@material-template/constants": "workspace:*",
    "@material-template/directives": "workspace:*",
    "@material-template/hooks": "workspace:*",
    "@material-template/style": "workspace:*",
    "@material-template/utils": "workspace:*",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@pnpm/workspace.find-packages": "^1000.0.10",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vitest/eslint-plugin": "1.1.7",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "eslint": "^9.21.0",
    "eslint-plugin-oxlint": "^0.15.11",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.15.11",
    "prettier": "^3.5.2",
    "typescript": "~5.7.3",
    "unbuild": "^3.3.1",
    "vite": "^6.1.1",
    "vitest": "^3.0.6",
    "vue-tsc": "^2.2.4"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
